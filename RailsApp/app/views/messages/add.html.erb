<h1>Messages#add</h1>
<p><%= @msg %></p>
<% if @message.errors.any? %>
<ul>
    <% @message.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<% end %>
<table>
    <%= form_for(@message, url:{controller:'messages', action:'add'}) do |form| %>
    <tr><th>Person ID</th>
        <td><%= form.text_field :person_id %></td></tr>
    <tr><th>title</th>
        <td><%= form.text_field :title %></td></tr>
    <tr><th>Message</th>
        <td><%= form.text_area :message, {cols:30, row:3} %></td></tr>
    </tr>
    <tr><th></th>
        <td><%= form.submit "送信" %></td></tr>
    </tr>
    <% end %>
</table>